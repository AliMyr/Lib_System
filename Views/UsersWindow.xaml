<Window x:Class="Lib_System.Views.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Users" Height="450" Width="700">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="FilterBox" Width="200" Margin="0,0,10,0" TextChanged="FilterBox_TextChanged"/>
            <Button Content="Add"    Width="80" Click="Add_Click" Margin="0,0,5,0"/>
            <Button Content="Edit"   Width="80" Click="Edit_Click" Margin="0,0,5,0"/>
            <Button Content="Delete" Width="80" Click="Delete_Click"/>
        </StackPanel>
        <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"         Binding="{Binding Id}"        Width="Auto"/>
                <DataGridTextColumn Header="Username"   Binding="{Binding Username}"  Width="2*"/>
                <DataGridTextColumn Header="Email"      Binding="{Binding Email}"     Width="2*"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt, StringFormat=\{0:yyyy-MM-dd HH:mm:ss\}}" Width="Auto"/>
                <DataGridTextColumn Header="Updated At" Binding="{Binding UpdatedAt, StringFormat=\{0:yyyy-MM-dd HH:mm:ss\}}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
