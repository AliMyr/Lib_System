<Window x:Class="Lib_System.Views.PublishersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publishers" Height="300" Width="500">
    <DataGrid x:Name="PublishersGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
            <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>