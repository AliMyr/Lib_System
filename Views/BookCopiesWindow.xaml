<Window x:Class="Lib_System.Views.BookCopiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Copies" Height="300" Width="400">
    <DataGrid x:Name="CopiesGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID"              Binding="{Binding Id}"             Width="Auto"/>
            <DataGridTextColumn Header="Book ID"         Binding="{Binding BookId}"         Width="*"/>
            <DataGridTextColumn Header="Reading Room ID" Binding="{Binding ReadingRoomsId}" Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
