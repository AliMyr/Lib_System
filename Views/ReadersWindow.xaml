<Window x:Class="Lib_System.Views.ReadersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Readers" Height="450" Width="800">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Add" Width="80" Margin="0,0,5,0" Click="Add_Click"/>
            <Button Content="Edit" Width="80" Margin="0,0,5,0" Click="Edit_Click"/>
            <Button Content="Delete" Width="80" Click="Delete_Click"/>
        </StackPanel>
        <DataGrid x:Name="ReadersGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"        Binding="{Binding Id}"               Width="Auto"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}"         Width="*"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"      Width="*"/>
                <DataGridTextColumn Header="Middle"    Binding="{Binding MiddleName}"      Width="*"/>
                <DataGridTextColumn Header="Phone"     Binding="{Binding Phone}"            Width="Auto"/>
                <DataGridTextColumn Header="Address"   Binding="{Binding Address}"          Width="*"/>
                <DataGridTextColumn Header="Reg Date"  Binding="{Binding RegistrationDate}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>