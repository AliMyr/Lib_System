<Window x:Class="Lib_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Admin" Height="800" Width="250">
    <ScrollViewer>
        <StackPanel Margin="10" VerticalAlignment="Top">
            <Button Content="Manage Authors"        Click="ShowAuthors_Click"      Margin="0,5" Height="30"/>
            <Button Content="Manage Books"          Click="ShowBooks_Click"        Margin="0,5" Height="30"/>
            <Button Content="Manage Readers"        Click="ShowReaders_Click"      Margin="0,5" Height="30"/>
            <Button Content="Manage Genres"         Click="ShowGenres_Click"       Margin="0,5" Height="30"/>
            <Button Content="Manage Languages"      Click="ShowLanguages_Click"    Margin="0,5" Height="30"/>
            <Button Content="Manage Publishers"     Click="ShowPublishers_Click"   Margin="0,5" Height="30"/>
            <Button Content="Author–Book Relations" Click="ShowAuthorBook_Click"   Margin="0,5" Height="30"/>
            <Button Content="Manage Copies"         Click="ShowCopies_Click"       Margin="0,5" Height="30"/>
            <Button Content="Manage Loans"          Click="ShowLoans_Click"        Margin="0,5" Height="30"/>
            <Button Content="Manage Rooms"          Click="ShowRooms_Click"        Margin="0,5" Height="30"/>
            <Button Content="Manage Reservations"   Click="ShowReservations_Click" Margin="0,5" Height="30"/>
            <Button Content="Manage Roles"          Click="ShowRoles_Click"        Margin="0,5" Height="30"/>
            <Button Content="Manage Staff"          Click="ShowStaff_Click"        Margin="0,5" Height="30"/>
            <Button Content="Audit Log"             Click="ShowAudit_Click"        Margin="0,5" Height="30"/>
            <Button Content="Session Log"           Click="ShowSessions_Click"     Margin="0,5" Height="30"/>
            <Button Content="Manage Users"          Click="ShowUsers_Click"        Margin="0,5" Height="30"/>
        </StackPanel>
    </ScrollViewer>
</Window>
