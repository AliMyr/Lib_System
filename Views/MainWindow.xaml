<Window x:Class="Lib_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Show Authors" Width="120" Height="30" Click="ShowAuthors_Click"/>
            <Button Content="Show Books" Width="120" Height="30" Margin="0,5,0,0" Click="ShowBooks_Click"/>
            <Button Content="Show Readers" Width="120" Height="30" Margin="0,5,0,0" Click="ShowReaders_Click"/>
            <Button Content="Show Genres" Width="120" Height="30" Click="ShowGenres_Click" Margin="0,5,0,0"/>
            <Button Content="Show Languages" Width="120" Height="30" Click="ShowLanguages_Click" Margin="0,5,0,0"/>
            <Button Content="Show Publishers" Width="120" Height="30" Click="ShowPublishers_Click" Margin="0,5,0,0"/>
            <TextBlock Text="Welcome. Now get to work!" FontSize="20" Margin="0,20,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
