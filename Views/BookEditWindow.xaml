<Window x:Class="Lib_System.Views.BookEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book" Height="380" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Title:"/>
        <TextBox x:Name="TitleBox" Grid.Row="1" Margin="0,5"/>

        <TextBlock Text="Publisher ID:" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox x:Name="PublisherBox" Grid.Row="3" Margin="0,5"/>

        <TextBlock Text="Publication Date (yyyy-MM-dd):" Grid.Row="4" Margin="0,10,0,0"/>
        <TextBox x:Name="DateBox" Grid.Row="5" Margin="0,5"/>

        <TextBlock Text="Pages:" Grid.Row="6" Margin="0,10,0,0"/>
        <TextBox x:Name="PagesBox" Grid.Row="7" Margin="0,5"/>

        <TextBlock Text="Genre ID:" Grid.Row="8" Margin="0,10,0,0"/>
        <TextBox x:Name="GenreBox" Grid.Row="9" Margin="0,5"/>

        <TextBlock Text="Language ID:" Grid.Row="10" Margin="0,10,0,0"/>
        <TextBox x:Name="LangBox" Grid.Row="11" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="12" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
