<Window x:Class="Lib_System.Views.LogAuditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audit Logs" Height="450" Width="700">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                Margin="0,0,0,10">
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="FilterBox"
               Width="200"
               Margin="0,0,10,0"
               TextChanged="FilterBox_TextChanged"/>
            <Button Content="Add"    Width="80" Click="Add_Click"    Margin="0,0,5,0"/>
            <Button Content="Edit"   Width="80" Click="Edit_Click"   Margin="0,0,5,0"/>
            <Button Content="Delete" Width="80" Click="Delete_Click"/>
        </StackPanel>
        <DataGrid x:Name="AuditGrid"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                            Binding="{Binding Id}"
                            Width="Auto"/>
                <DataGridTextColumn Header="User"
                            Binding="{Binding Username}"
                            Width="2*"/>
                <DataGridTextColumn Header="Action"
                            Binding="{Binding Action}"
                            Width="2*"/>
                <DataGridTextColumn Header="Created At"
                            Binding="{Binding CreatedAt, StringFormat=\{0:yyyy-MM-dd HH:mm:ss\}}"
                            Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
