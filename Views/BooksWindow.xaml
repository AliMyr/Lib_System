<Window x:Class="Lib_System.Views.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Books" Height="400" Width="800">
    <Grid Margin="10">
        <DataGrid x:Name="BooksGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Publisher" Binding="{Binding PublisherId}" Width="Auto"/>
                <DataGridTextColumn Header="Date" Binding="{Binding PublicationDate}" Width="Auto"/>
                <DataGridTextColumn Header="Pages" Binding="{Binding Pages}" Width="Auto"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding GenreId}" Width="Auto"/>
                <DataGridTextColumn Header="Lang" Binding="{Binding LanguageId}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
