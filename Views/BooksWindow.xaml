<Window x:Class="Lib_System.Views.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Books" Height="450" Width="800">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Add" Width="80" Margin="0,0,5,0" Click="Add_Click"/>
            <Button Content="Edit" Width="80" Margin="0,0,5,0" Click="Edit_Click"/>
            <Button Content="Delete" Width="80" Click="Delete_Click"/>
        </StackPanel>
        <DataGrid x:Name="BooksGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"         Binding="{Binding Id}"              Width="Auto"/>
                <DataGridTextColumn Header="Title"      Binding="{Binding Title}"           Width="*"/>
                <DataGridTextColumn Header="Publisher"  Binding="{Binding PublisherId}"     Width="Auto"/>
                <DataGridTextColumn Header="Date"       Binding="{Binding PublicationDate}" Width="Auto"/>
                <DataGridTextColumn Header="Pages"      Binding="{Binding Pages}"           Width="Auto"/>
                <DataGridTextColumn Header="Genre"      Binding="{Binding GenreId}"         Width="Auto"/>
                <DataGridTextColumn Header="Language"   Binding="{Binding LanguageId}"      Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
