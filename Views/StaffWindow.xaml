<Window x:Class="Lib_System.Views.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff" Height="450" Width="700">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="FilterBox" Width="200" Margin="0,0,10,0" TextChanged="FilterBox_TextChanged"/>
            <Button Content="Add"    Width="80" Click="Add_Click" Margin="0,0,5,0"/>
            <Button Content="Edit"   Width="80" Click="Edit_Click" Margin="0,0,5,0"/>
            <Button Content="Delete" Width="80" Click="Delete_Click"/>
        </StackPanel>
        <DataGrid x:Name="StaffGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"        Binding="{Binding Id}"        Width="Auto"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}"  Width="2*"/>
                <DataGridTextColumn Header="Role"      Binding="{Binding RoleTitle}" Width="2*"/>
                <DataGridTextColumn Header="Hired"     Binding="{Binding HiredDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="Auto"/>
                <DataGridTextColumn Header="Phone"     Binding="{Binding Phone}"     Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
