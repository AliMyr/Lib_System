<Window x:Class="Lib_System.Views.AuthorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authors" Height="400" Width="600">
	<DockPanel Margin="10">
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
			<Button Content="Add" Width="80" Margin="0,0,5,0" Click="Add_Click"/>
			<Button Content="Edit" Width="80" Margin="0,0,5,0" Click="Edit_Click"/>
			<Button Content="Delete" Width="80" Click="Delete_Click"/>
		</StackPanel>
		<DataGrid x:Name="AuthorsDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID"     Binding="{Binding Id}"         Width="Auto"/>
				<DataGridTextColumn Header="Last"   Binding="{Binding LastName}"   Width="*"/>
				<DataGridTextColumn Header="First"  Binding="{Binding FirstName}"  Width="*"/>
				<DataGridTextColumn Header="Middle" Binding="{Binding MiddleName}" Width="*"/>
				<DataGridTextColumn Header="Pen"    Binding="{Binding PenName}"    Width="*"/>
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</Window>
