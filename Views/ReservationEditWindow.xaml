<Window x:Class="Lib_System.Views.ReservationEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Reservation" Height="360" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Reader ID:"/>
        <TextBox x:Name="ReaderBox" Grid.Row="1" Margin="0,5"/>
        <TextBlock Text="Room ID:" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox x:Name="RoomBox" Grid.Row="3" Margin="0,5"/>
        <TextBlock Text="Date (yyyy-MM-dd):" Grid.Row="4" Margin="0,10,0,0"/>
        <TextBox x:Name="DateBox" Grid.Row="5" Margin="0,5"/>
        <TextBlock Text="Start Time (HH:mm:ss):" Grid.Row="6" Margin="0,10,0,0"/>
        <TextBox x:Name="StartBox" Grid.Row="7" Margin="0,5"/>
        <TextBlock Text="End Time (HH:mm:ss):" Grid.Row="8" Margin="0,10,0,0"/>
        <TextBox x:Name="EndBox" Grid.Row="9" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" Grid.Row="10" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
