<Window x:Class="Lib_System.Views.BookLoansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loans" Height="400" Width="600">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="FilterBox" Width="200" Margin="0,0,10,0" TextChanged="FilterBox_TextChanged"/>
            <Button Content="Add"    Width="80" Click="Add_Click" Margin="0,0,5,0"/>
            <Button Content="Edit"   Width="80" Click="Edit_Click" Margin="0,0,5,0"/>
            <Button Content="Delete" Width="80" Click="Delete_Click"/>
        </StackPanel>
        <DataGrid x:Name="LoansGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"        Binding="{Binding Id}"         Width="Auto"/>
                <DataGridTextColumn Header="Reader"    Binding="{Binding ReaderName}" Width="2*"/>
                <DataGridTextColumn Header="Book"      Binding="{Binding BookTitle}"  Width="2*"/>
                <DataGridTextColumn Header="Loan Date" Binding="{Binding LoanDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="Auto"/>
                <DataGridTextColumn Header="Return"    Binding="{Binding ReturnDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
